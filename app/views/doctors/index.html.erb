<div style="width: 80%; margin: 0 auto;">
  <h1>Welcome to Doctor Directory</h1>

  <p>Please select a doctor:</p>

  <ul>
    <% @doctors.each do |doctor| %>
      <li>
        <%= link_to doctor.name, doctor_path(doctor) %>
        <ul>
          <li><%= "Total patients: " + doctor.total_patients %></li>
        </ul>
      </li>
    <% end %>
  </ul>
</div>