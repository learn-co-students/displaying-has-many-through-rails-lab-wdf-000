<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Department:</strong>
  <%= @doctor.department %>
</p>

<% @doctor.appointments.each do |appointment| %>
  <%= link_to "#{appointment.patient.name} #{appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")}", patient_path(appointment.patient) %>
<% end %>
