<%= @doctor.name %><br />
<%= @doctor.department %><br />
<% @doctor.appointments.each do |appointment| %>
  <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
  <%= appointment.appointment_datetime.strftime("%B %d, %Y") %> at <%= appointment.appointment_datetime.strftime("%H:%M") %>
  <br />
<% end %>
