<div style="width: 80%; margin: 0 auto;">
  <h1>Welcome to Patient index</h1>

  <p>Please select a patient:</p>

  <ul>
    <% @patients.each do |patient| %>
      <li>
        Name: <%= link_to patient.name, patient_path(patient) %> Number of Appointments: <%= patient.appointments.count.to_s %>
      </li>
    <% end %>
  </ul>
</div>